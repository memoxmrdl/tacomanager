<section class="content">
  <%= display_notice %>
  <div class="content title-item">
    <h3><%= @establishment.name %></h3>
    <%= link_to 'Ordenar', new_dashboard_order_path, class: 'button' %>
    <%= link_to 'Agregar comida', new_dashboard_establishment_food_path(establishment_id: @establishment.id), class: 'button'  %>
  </div>
  <p class="content">
  Domicilio: <%= @establishment.address.full_address %></br>
  Horarios: <%= @establishment.schedule %></br>
  Telefonos: <%= @establishment.phone %>
  </p>
  <div class="span4">
    <div id="map"></div>
  </div>
  <div class="span7">
    <h4 class="content menu">Menu:</h4>
    <section id="foods">
      <%= display_foods t('.food_empty') %>
    </section>
  </div>
</section>
<script type="text/javascript">
<% params = "#{@establishment.address.latitude}, #{@establishment.address.longitude}".html_safe %>
document.addEventListener('page:change', function(){
  new App.Utilities.Map(<%= params %>);
});

$(function(){
  new App.Utilities.Map(<%= params %>);
});
</script>
