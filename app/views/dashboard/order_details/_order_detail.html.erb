<div class="order_detail" data-orderdetail-id="<%= "#{order_detail.id}" %>">
  <div class="detail">
    <h4><%= order_detail.food.name %></h4>
    <div class="quantity">
      <%= text_field_tag 'quantity', order_detail.quantity, class: 'quantity', size: 3, maxlength: 3, disabled: order_payment? %>
    </div>
    <%= display_remove order_detail unless order_payment? %>
    <%= display_payment order_detail unless order_payment? %>
    <div class="price"><%= number_to_currency(order_detail.calculate_subtotal, :unit => "$") %></div>
  </div>
</div>
