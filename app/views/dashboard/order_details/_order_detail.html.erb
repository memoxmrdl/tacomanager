<div class="order_detail" data-orderdetail-id="<%= "#{order_detail.id}" %>">
  <div class="detail">
    <h4><%= order_detail.food.name %></h4>
    <div class="quantity">
      <%= text_field_tag 'quantity', '', size: 3, maxlength: 3 %>
    </div>
    <div class="remove">Remover</div>
    <div class="payment">Pagado</div>
    <div class="price"><%= number_to_currency(order_detail.food.price, :unit => "$") %></div>
  </div>
</div>
