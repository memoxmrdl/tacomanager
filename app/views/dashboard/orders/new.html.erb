class Dashboard::OrdersController < DashboardController
  def index
    @orders = Order.find_by_user current_identity
  end

  def new
    @order = Order.new
  end

  def create
    @order = Order.new params_order

    return redirect_to dashboard_order_path(@order), notice: 'created' if @order.save

    render :new
  end

  def edit
  end

  def update
  end

  def destroy
  end

  private

  def params_order
    params.require(:order).permit(:name, :user_id, :establishment_id)
  end
end
